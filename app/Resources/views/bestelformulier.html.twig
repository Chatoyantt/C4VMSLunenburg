{% extends 'base.html.twig' %}
{% block body %}
<div>
	<br><br>
	<h1>Bestelformulieren</h1>
	<a href="{{ path('nieuwebestelformulier') }}">Nieuw Formulier</a>
	<br><br>

</div>

<table>
	<tbody>

		<tr>
			<td class="shrink"><b>ID</b></td>
			<td class="shrink"><b>Leverancier</b></td>
			<td class="shrink"><b>Bestelordernummer</b></td>
			<td class="shrink"><b>Artikelnummer</b></td>
			<td class="shrink"><b>Omschrijving</b></td>
			<td class="shrink"><b>Aantal besteld</b></td>
			<td class="shrink"><b>Verwachte leverdatum</b></td>
			<td class="shrink"><b>Wijzig</b></td>
			<td class="shrink"><b>Archiveer</b></td>
		</tr>

	{% for bestelformulier in bestelformulier %}
		<tr>
			<td>{{ bestelformulier.bid }}</td>
			<td>{{ bestelformulier.leverancier }}</td>
			<td>{{ bestelformulier.bestelordernr }}</td>
			<td>{{ bestelformulier.artikel.artikelnummer }}</td>
			<td>{{ bestelformulier.artikel.omschrijving }}</td>
			<td>{{ bestelformulier.besteldaantal }}</td>
			<td>{{ bestelformulier.verwachteleverdatum|date('d-m-Y') }}</td>
			<td><a href="{{ path('bestelformulierwijzigen',{'bid':bestelformulier.bid}) }}">Wijzig</a></td>
			<td><a href="{{ path('bestelformulierverwijderen',{'bid':bestelformulier.bid}) }}">Archiveer</a></td>
		</tr>
	{% endfor %}
	</tbody>
</table>
{% endblock %}
