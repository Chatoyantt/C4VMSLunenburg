{% extends 'base.html.twig' %}
{% block body %}
<div class="container">
	<br><br>
	<h1>Retouren</h1>
	<a href="{{ path('nieuwretour') }}">Nieuw retour</a>
	<br><br>

</div>

<table>
	<tbody>

		<tr>
			<td class="shrink"><b>Retournummer</b></td>
			<td class="shrink"><b>Artikelnummer</b></td>
			<td class="shrink"><b>Omschrijving</b></td>
			<td class="shrink"><b>Aantal</b></td>
			<td class="shrink"><b>Verwachte leverdatum</b></td>
			<td class="shrink"><b>Wijzig</b></td>
			<td class="shrink"><b>Archiveer</b></td>
		</tr>

	{% for retour in retouren %}
		<tr>
			<td class="shrinkleft">{{ retour.retournummer }}</td>
			<td class="shrinkleft">{{ retour.artikel.artikelnummer }}</td>
			<td class="shrinkleft">{{ retour.artikel.omschrijving }}</td>
			<td class="shrinkright">{{ retour.aantal }}</td>
			<td class="shrink">{{ retour.verwachteleverdatum|date('d-m-Y') }}</td>
			<td class="shrink"><a href="{{ path('retourwijzigen',{'retournummer':retour.retournummer}) }}">Wijzig</a></td>
			<td class="shrink"><a href="{{ path('retourwijzigen',{'retournummer':retour.retournummer}) }}">Archiveer</a></td>

		</tr>
	{% endfor %}
	</tbody>
</table>
{% endblock %}
